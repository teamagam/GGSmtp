<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="GGSmtp.ServerApp.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
      <section name="GGSmtp.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
    </sectionGroup>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <startup> 
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>
  <applicationSettings>
    <GGSmtp.ServerApp.Properties.Settings>
      <setting name="HostPort" serializeAs="String">
        <value>28960</value>
      </setting>
      <setting name="LogVerbosity" serializeAs="String">
        <value>Debug</value>
      </setting>
    </GGSmtp.ServerApp.Properties.Settings>
    <GGSmtp.Properties.Settings>
      <setting name="GreetingMessage" serializeAs="String">
        <value>GGSmtp Sensor</value>
      </setting>
      <setting name="GGMessagingUrl" serializeAs="String">
        <value>http://ggmessaging.herokuapp.com</value>
      </setting>
      <setting name="GGImagesRequestUrl" serializeAs="String">
        <value>/images</value>
      </setting>
    </GGSmtp.Properties.Settings>
  </applicationSettings>
  <log4net>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="RollingFileAppender" />
    </root>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="MailServerLog.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline" />
      </layout>
    </appender>
  </log4net>
</configuration>